<h1>New Movie</h1>

<%= form_for :movie, url:movies_path do |f| %>
    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :information %> <br>
        <%= f.text_area :information %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', movies_path %>